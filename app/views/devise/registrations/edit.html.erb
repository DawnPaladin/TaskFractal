<div class="page-edit-user">
  <img src="/<%= current_user.theme %>.svg" alt="" class="logo" />
  <h1>TaskFractal</h1>
  <h2>My account</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :nickname %>
      <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname" %>
    </div>

    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email, autocomplete: "email" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label :current_password %>
      <%= f.password_field :current_password, autocomplete: "current-password" %>
    </div>
    
    <p class="small">We need your current password to confirm your changes.</p>

    <div class="change-password">
      <div class="field">
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>
      
      <div class="field">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
      
      <p class="small">Leave these blank if you don’t want to change it. Password must be at least 6 characters long. Don’t reuse a password from another site.</p>
    </div>

    <div class="actions">
      <%= f.submit "Save", class: "submit-button" %>
      <a href="/tasks" class="button-link">Back to Home</a>
    </div>
  <% end %>

  <%= button_to "Delete my account...", registration_path(resource_name), data: { confirm: "Are you sure you want to delete your account?" }, method: :delete, class: "submit-button cancel-account" %></p>

</div>
